<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title><%= equipamento ? 'Editar Equipamento' : 'Cadastrar Equipamento' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e6f2e6; /* Verde suave */
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form-card {
            background: #ffffff;
            border-radius: 15px;
            padding: 40px 30px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            max-width: 500px;
            width: 100%;
            position: relative;
        }
        .form-card h2 {
            margin-bottom: 30px;
            font-weight: 600;
            color: #155724; /* Verde escuro */
            text-align: center;
        }
        .form-label {
            font-weight: 500;
            color: #155724;
        }
        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            font-weight: 500;
        }
        .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
        .btn-voltar {
            position: absolute;
            top: 15px;
            right: 15px;
        }
    </style>
</head>
<body>
    <div class="form-card">
        <!-- Botão de voltar dentro do card -->
        <a href="/equipamentos" class="btn btn-danger btn-sm btn-voltar">Voltar</a>

        <h2><%= equipamento ? 'Editar Equipamento' : 'Cadastro de Equipamento' %></h2>

        <form id="equipamentoForm">
            <input type="hidden" id="id" name="id" value="<%= equipamento ? equipamento.id : '' %>">

            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" 
                       value="<%= equipamento ? equipamento.nome : '' %>" required>
            </div>

            <div class="mb-3">
                <label for="marca" class="form-label">Marca</label>
                <select class="form-select" id="marca" name="marca" required>
                    <option value="">Selecione a marca</option>
                    <% marcas.forEach(marca => { %>
                        <option value="<%= marca.id %>" 
                            <%= equipamento && marca.nome === equipamento.marca ? 'selected' : '' %>>
                            <%= marca.nome %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-3">
                <label for="modelo" class="form-label">Modelo</label>
                <input type="text" class="form-control" id="modelo" name="modelo" 
                       value="<%= equipamento ? equipamento.modelo : '' %>" required>
            </div>

            <div class="mb-3">
                <label for="quantidade" class="form-label">Quantidade</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" 
                       value="<%= equipamento ? equipamento.quantidade : '' %>" required>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <%= equipamento ? 'Salvar Alterações' : 'Cadastrar' %>
                </button>
            </div>
        </form>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/equipamento/listarequip.js"></script>
</body>
</html>
